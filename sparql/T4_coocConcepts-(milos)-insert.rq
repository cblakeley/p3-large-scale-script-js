# Insert coocurrent subject headings for the GND-ID into its RDF Graph

# Variable: <http://d-nb.info/gnd/118529692> (should be a parameter)
# It denotes both (a) an RDF Graph in the INSERT statement, and (b) a specific GND-ID being selected from the GND dataset

PREFIX dcterms: <http://purl.org/dc/terms/>
PREFIX isbd: <http://iflastandards.info/ns/isbd/elements/>
PREFIX bibo: <http://purl.org/ontology/bibo/>
PREFIX dc: <http://purl.org/dc/elements/1.1/>
PREFIX dbo: <http://dbpedia.org/ontology/>
PREFIX owl: <http://www.w3.org/2002/07/owl#>
PREFIX gndo: <http://d-nb.info/standards/elementset/gnd#>
PREFIX rdfs: <http://www.w3.org/2000/01/rdf-schema#>
PREFIX dct: <http://purl.org/dc/terms/>
PREFIX nif: <http://persistence.uni-leipzig.org/nlp2rdf/ontologies/nif-core#>
prefix xsd:   <http://www.w3.org/2001/XMLSchema#> 
PREFIX dbp: <http://dbpedia.org/property/>
PREFIX skos: <http://www.w3.org/2004/02/skos/core#>
PREFIX marcrel: <http://id.loc.gov/vocabulary/relators/>
PREFIX ex: <http://example.org/x/>
PREFIX rvk: <http://lod.b3kat.de/rvk/>
PREFIX gnd: <http://d-nb.info/gnd/>
PREFIX ddc: <http://dewey.info/class/>
PREFIX ssg: <http://lod.b3kat.de/ssg/>

#INSERT INTO <http://d-nb.info/gnd/118529692> { <http://d-nb.info/gnd/118529692> a skos:Concept ; ex:hasCooc_DDC ?coDdc; ex:hasCooc_RVK ?coRvk ; ex:hasCooc_SSG ?coSsg ; ex:hasCooc_GND ?coGnd . } 

CONSTRUCT { <http://d-nb.info/gnd/118529692> a skos:Concept ; ex:hasCooc_DDC ?coDdc; ex:hasCooc_RVK ?coRvk ; ex:hasCooc_SSG ?coSsg ; ex:hasCooc_GND ?coGnd . } 

WHERE { 
GRAPH <http://lod.b3kat.de/> {
   ?record ?p <http://d-nb.info/gnd/118529692> . #- Hanns Eisler
   OPTIONAL { ?record dc:subject ?cosubjectLabel }
   OPTIONAL { ?record dct:subject ?cosubjectUri . FILTER (isURI(?cosubjectUri)) }
   OPTIONAL { ?record bibo:lccn ?colccn }
   OPTIONAL { ?record bibo:isbn ?coisbn }
   OPTIONAL { ?record marcrel:aut ?cocreator }
}
BIND (IF (isURI(?cosubjectUri) && regex(str(?cosubjectUri), "/rvk/"), ?cosubjectUri, "" ) as ?coRvk)
BIND (IF (isURI(?cosubjectUri) && regex(str(?cosubjectUri), "dewey.info"), ?cosubjectUri, "" ) as ?coDdc)
BIND (IF (isURI(?cosubjectUri) && regex(str(?cosubjectUri), "/ssg/"), ?cosubjectUri, "" ) as ?coSsg)
BIND (IF (isURI(?cosubjectUri) && regex(str(?cosubjectUri), "/gnd/"), ?cosubjectUri, "" ) as ?coGnd)
}
LIMIT 500
